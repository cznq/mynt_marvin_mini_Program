<!--pages/mall-detail/mall-detail.wxml-->
<import src="../../vendor/wxParse/wxParse.wxml" />
<view class="page" wx:if="{{commerceDetail}}">
  <view class="page__hd">
    <swiper indicator-dots="{{slide_data.indicatorDots}}"
  autoplay="{{slide_data.autoplay}}" interval="{{slide_data.interval}}" duration="{{slide_data.duration}}">
      <block wx:for="{{slide_data.thumbnail_url}}" wx:key="key">
        <swiper-item>
          <view class="swiper-item" style="background: url({{item}}) no-repeat center center;background-size:cover;" bindtap="viewPhoto">
            <view class="swiperInfo">
              <image src="../../images/search@2x.png"></image>
              <text>1/25</text>
            </view>
          </view>
        </swiper-item>
      </block>
    </swiper>
    <view class="infoWrapper top">
      <view class="shop-name">{{commerceDetail.name}}</view>
      <view class="needinfo">
        <text>咖啡馆</text>
        <view class="star-part">
          <block wx:for="{{5}}" wx:key="">
            <image class="star" src="../../images/{{item <= rate ? 'love@2x.png' : 'love_gray@2x.png'}}" data-rate="{{item}}" bindtap="rateChange"></image>
          </block>
        </view>
      </view>
    </view>
    <view class="infoWrapper bottom">
      <view class="info-column">
        <view class="on-sale-time"><image src="../../images/icon_kitchen@2x.png"></image>{{commerceDetail.business_hours.start}} - {{commerceDetail.business_hours.end}}
        </view>
        <view class="on-sale in-right">营业中</view>
      </view>
      <view class="info-column">
        <view class="address"><image src="../../images/icon_add@2x.png"></image>{{commerceDetail.address}}
        </view>
        <view class="on-sale in-right"><image src="../../images/icon_telephone@2x.png" bindtap="makePhoneCall" data-phone="{{commerceDetail.phone}}"></image></view>
      </view>
    </view>
  </view>
  <view class="page__bd">
    <view class="tabs">
      <view class="active"><image src="../../images/icon_protocol@2x.png"></image>
        <text>协议优惠</text></view>
      <view bindtap="gotoView">详情展示</view>
      <view bindtap="gotoView">消费评价</view>
    </view>
    <scroll-view scroll-y style="height:100%;" scroll-into-view="{{curPosition}}">
      <view class="discount-list" id="discSec">
      <block wx:for="{{protocolInfo}}" wx:key="">
        <view class="itemWrap">
          <view class="disText">
            <view class="item-title">{{item.benifit_content}}</view>
            <view class="item-intro">{{item.benifit_limit}}</view>
          </view>
          <view class="disBtn">
            <button bindtap="cardTopay" data-discount="{{item.benifit_content}}" data-limit="{{item.benifit_limit}}">协议买单</button>
          </view>
        </view>
      </block>
      </view>
      <view class="detail_show tabContent" id="detailSec">
        <view class="content-title">详情展示</view>
        <view class="content">
          <!-- <template is="html2wxml" data="{{wxmlData:details}}" /> -->
          <template is="wxParse" data="{{wxParseData:details.nodes}}"/>
        </view>
      </view>
      <view class="coment-list tabContent" id="comtSec">
        <view class="content-title">
          <text>消费评价</text>
          <view><button bindtap="enterComment">写点评</button></view>
        </view>
        <view class="content">
        <!-- 评论列表 -->
        <block wx:for="{{commentList}}" wx:key="">
          <view class="coment-wrapper">
            <view class="avatar"><image src="{{item.user_avatar_url}}"></image></view>
            <view class="comment-content">
              <view class="top">
                <view class="user-name">{{item.user_nickname}}</view>
                <view class="time">{{item.time}}</view>
              </view>
              <view class="star-part comment-star">
                <view class="star core">打分</view>
                <block wx:for="{{5}}" wx:key="" wx:for-item="number">
                  <image class="star" src="../../images/{{number <= item.score-1 ? 'love@2x.png' : 'love_gray@2x.png'}}" data-rate="{{item}}" bindtap="rateChange"></image>
                </block>
              </view>
              <view class="comment-detail">
                <text>{{item.comment}}</text>
                <view class="imgs">
                  <block wx:for="{{item.pic_url}}" wx:key="">
                    <image src="{{item}}"></image>
                  </block>
                </view>
              </view>
            </view>
          </view>
        </block>
        </view>
      </view>

    </scroll-view>
  </view>
  <view id="vip-dialogs" wx:if="{{showVipCard}}">
  <view class="js_dialog" id="iosDialog1">
      <view class="weui-mask"></view>
      <view class="weui-dialog">
          <view class="weui-dialog__hd">
            <view class="weui-dialog__title">向商家出示此页面以享受优惠</view>
            <view class="shop-pic" >
              <image src="{{commerceDetail.thumbnail_url[0]}}" width="100%" mode="widthFix"></image>
            </view>
            <view class="shop-name">{{commerceDetail.name}}</view>
          </view>
          <view class="weui-dialog__bd">
            <view class="card-wrapper vip-card-wrapper">
              <view class="card-content">
                <view class="vip-card-top">
                  <view class="name"><text>协</text>{{employeeInfo.name}}</view>
                  <image class="avatar" src="{{employeeInfo.avatar}}" mode="widthFix"></image>
                </view>
                <view class="vip-card-middle">
                  <view class="company-name">{{employeeInfo.company_name}}</view>
                  <view class="company-address">{{employeeInfo.company_address}}</view>
                </view>
                <view class="bar">
                  <view class="bar-bg" style="background: url(../../images/mynt_vip_bg@2x.png) no-repeat right center;background-size:310rpx 66rpx;">
                  <view class="id-num">ID: {{employeeInfo.employee_card_id}}</view>
                  <view class="expire-time">有效期: {{employeeInfo.expire}}</view>
                </view>
                </view>
              </view>
              <view class="discount-info">
                <view class="coupon">{{dialog_discount}}</view>
                <view class="limit">{{dialog_discount_limit}}</view>
              </view>
            </view>
          </view>
          <view class="weui-dialog__ft">
              <button class="weui-dialog__btn" bindtap="closeDialog"><image src="../../images/back@2x.png"></image></button>
          </view>
      </view>
  </view>
  </view>
  <view class="page__ft">
   
  </view>
  
</view>

