/* pages/benifit-card/benifit-card.wxss */
.page {
  padding: 1px 60rpx;
  background: -webkit-linear-gradient( top, rgba(255, 255, 255, 1), rgba(246, 246, 246, 1));
  background: linear-gradient( top, rgba(255, 255, 255, 1), rgba(246, 246, 246, 1));
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 20rpx;
  line-height: 1;
  font-size: 48rpx;
  color: rgba(8, 28, 51, 1);
}
.title-bar image {
  width: 48rpx;
  height: 36rpx;
}
.home-slide {
  margin-top: 40rpx;
}
.home-slide .swiper-item {
  width: 100%;
  height: 212rpx;
}
swiper {
  height: 212rpx;
}
.page__bd {
  margin-top: 60rpx;
}
.tab {
  font-size: 40rpx;
  color: rgba(26, 42, 75, 0.6);
  line-height: 1;
}
.tab text {
  margin-right: 72rpx;
}
.tab text.selected {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(8, 28, 51, 1);
  position: relative;
}
.tab text.selected::after {
  display: block;
  content: '';
  position: absolute;
  bottom: -24rpx;
  left: 24rpx;
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  border-bottom: 20rpx solid rgba(255, 105, 0, 1);

}
.shop-list {
  margin-top: 40rpx;
  width: 100%;
  overflow: hidden;
}
.shop-list .shop-wrapper {
  width: calc(50% - 7px);
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: inline-block;
  margin-right: 14px;
  float: left;
  margin-bottom: 14px;
}
.shop-list .shop-wrapper:nth-child(2n) {
  margin-right: 0;
}
.shop-wrapper .head-pic {
  width: 100%;
  height: 260rpx;
}
.shop-name {
  font-size: 32rpx;
  margin-top: 20rpx;
}
.star-part .star {
  display: inline-block;
  margin: 0 6rpx 0 0;
  line-height: 1;
  font-size: 24rpx;
}
.star-part .star.red {
  color: rgba(255, 58, 51, 1);
}
.star-part .star.gray {
  color: rgba(203, 203, 203, 1);
}
.tags {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  line-height: 1;
  color: rgba(136, 145, 169, 1);
  border-bottom: 4rpx dashed rgba(216, 227, 240, 1);
  padding-bottom: 16rpx;
}
.discount {
  font-size: 24rpx;
  color: rgba(191, 165, 113, 1);
  margin-top: 20rpx;
}
.discount .price-wrapper {
  font-size: 16rpx;
  border-radius: 20rpx;
  border-top-right-radius: 0;
  height: 28rpx;
  width: 88rpx;
  line-height: 28rpx;
  border: 1px solid rgba(191, 165, 113, 1);
  margin-bottom: 10rpx;
  overflow: hidden;
}
.discount .price-wrapper image {
  width: 16rpx;
  height: 16rpx;
  margin: 0 8rpx;
  vertical-align: text-bottom;
}