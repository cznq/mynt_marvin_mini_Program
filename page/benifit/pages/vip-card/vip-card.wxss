/* pages/benifit-card/benifit-card.wxss */
.page__hd {
  overflow: hidden;
}
.card-wrapper {
  padding: 60rpx 60rpx 0;
  background-color: #f5f5f6;
  border-bottom: 12rpx solid #9a9aa3;
  box-sizing: content-box;
}
.card-content {
  border: 1px solid #dfe0e5;
  border-bottom: none;
  border-bottom: 0;
  text-align: center;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background-color: #fffffe;
  margin-bottom: -12rpx;
}
.vip-card-wrapper .card-content {
  border-left: none;
  border-right: none;
  border-bottom: none;
}
.card-main {
  padding: 108rpx 96rpx 52rpx; 
}
.card-main .name {
  color: rgba(195, 201, 208, .3);
  font-weight: 700;
  font-size: 60rpx;
  line-height: 1;
  margin-bottom: 28rpx;
}
.card-main .info {
  color: rgba(136, 145, 169, 1);
  font-size: 22rpx;
}
.card-content .bar {
  background: -webkit-linear-gradient( left, rgba(243, 245, 246, 1), rgba(227, 229, 231, 1));
  background: linear-gradient( left, rgba(243, 245, 246, 1), rgba(227, 229, 231, 1));
  height: 74rpx;
}
.vip-card-wrapper {
  padding: 60rpx 50rpx 0;
  background: -webkit-linear-gradient( left, rgba(64, 68, 82, 1), rgba(39, 39, 59, 1));
  background: linear-gradient( left, rgba(64, 68, 82, 1), rgba(39, 39, 59, 1));
}
.vip-card-wrapper .card-content {
  background: #fcfcfb;
}
.vip-card-top {
  padding: 0 36rpx 36rpx;
  margin-top: 38rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.vip-card-top .name text {
  background: rgba(224, 181, 127, 1);
  color: #fff;
  font-size: 22rpx;
  font-weight: bold;
  text-align: center;
  margin-right: 20rpx;
  vertical-align: top;
  margin-top: 5rpx;
  line-height: 32rpx;
  width: 32rpx;
  width: 32rpx;
  display: inline-block;
}
.vip-card-top .name {
  font-size: 36rpx;
  margin-top: 10rpx;
  font-weight: bolder;
  line-height: 1;
  color: rgba(26, 42, 75, 1);
}
.vip-card-top .avatar {
  width: 70rpx;
  border-radius: 35rpx;
}
.vip-card-middle {
  margin-top: 20rpx;
  line-height: 1;
  text-align: left;
  padding: 0 36rpx 38rpx;
}
.vip-card-middle .company-name {
  font-size: 22rpx;
  font-weight: bold;
  color: rgba(26, 42, 75, 1);
}
.vip-card-middle .company-address {
  margin-top: 26rpx;
  font-size: 36rpx;
  line-height: 1.3;
  font-weight: 200;
}
.vip-card-wrapper .card-content .bar {
  background: -webkit-linear-gradient( left, rgba(233, 195, 149, 1), rgba(217, 167, 107, 1));
  background: linear-gradient( left, rgba(233, 195, 149, 1), rgba(217, 167, 107, 1));
  padding: 26rpx 22rpx 0;
  color: #fff;
  font-size: 22rpx;
  height: 48rpx;
  line-height: 48rpx;
}
.vip-card-wrapper .card-content .bar .bar-bg {
  height: 48rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.vip-card-wrapper .card-content .id-num {
  background-color: rgba(255, 255, 255, .2);
  display: inline-block;
  padding: 0 16rpx;
}
.vip-fun-intro {
  padding: 66rpx 60rpx 88rpx;
  text-align: center;
  border-bottom: 1px solid rgba(220, 220, 220, .5);
  box-shadow: 0 0 48rpx rgba(43, 51, 72, 0.03);
}
.vip-fun-intro .title {
  color: rgba(218, 169, 110, 1);
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
  text-align: center;
  position: relative;
}
.vip-fun-intro .title::before {
  content: '';
  height: 1px;
  display: block;
  width: 210rpx;
  background-color: rgba(217, 167, 107, 1);
  position: absolute;
  left: 0;
  top: 20rpx;
}
.vip-fun-intro .title::after {
  content: '';
  height: 1px;
  display: block;
  width: 210rpx;
  background-color: rgba(217, 167, 107, 1);
  position: absolute;
  right: 0;
  top: 20rpx;
}
.vip-fun-intro .subtitle {
  margin-top: 14rpx;
  line-height: 1;
  font-size: 22rpx;
  color: rgba(136, 145, 169, 1);
}
.vip-fun-intro .icon {
  border: 2px solid #f8eee3;
  width: 96rpx;
  height: 96rpx;
  border-radius: 49rpx;
  box-sizing: border-box;
  vertical-align: middle;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.vip-fun-intro .icon image {
  width: 60rpx;
}
.vip-fun-intro .textintro {
  font-size: 24rpx;
  font-weight: bold;
  margin-top: 22rpx;
  color: rgba(27, 43, 76, 1);
}
.vip-fun-intro .weui-flex__item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  margin-top: 34rpx;
}
.vip-area {
  margin-top: 76rpx;
  padding: 0 98rpx;
}
.vip-area button {
  width: 324rpx;
  height: 80rpx;
  background: -webkit-linear-gradient( left, rgba(233, 195, 149, 1), rgba(217, 167, 107, 1));
  background: linear-gradient( left, rgba(233, 195, 149, 1), rgba(217, 167, 107, 1));
  color: #fff;
  font-size: 32rpx;
  line-height: 80rpx;
  border: none;
  border-radius: 40rpx;
  box-shadow: none;
  margin-bottom: 28rpx;
}
.vip-area button::after {
  border: none;
}
.vip-area .tips {
  font-size: 22rpx;
  line-height: 34rpx;
}
.contact-admin {
  margin-top: 94rpx;
}
.contact-admin .tit {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
  color: rgba(136, 145, 169, 1);
}
.contact-admin .tips {
  color: rgba(136, 145, 169, 1);
  font-size: 22rpx;
  line-height: 34rpx;
  margin-top: 28rpx;
}
.round-hot {
  background: -webkit-linear-gradient( top, #fdfdfd, #fbfbfb);
  background: linear-gradient( top, #fdfdfd, #fbfbfb);
  padding: 2rpx 0 60rpx 60rpx;
}
.hot-area {
  margin-top: 60rpx;
}
.hot-title {
  font-size: 32rpx;
}
.hot-title text {
  font-weight: bold;
}
.view-all {
  font-size: 22rpx;
  color: rgba(136, 145, 169, 1);
  margin-top: bottom;
}
.top-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  vertical-align: bottom;
  align-items: flex-end;
  padding-right: 60rpx;
}
.shop-list {
  margin-top: 20rpx;
}
.shop-list .shop-wrapper {
  width: 300rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: inline-block;
  margin-right: 30rpx;
}
.shop-wrapper .head-pic {
  width: 100%;
  height: 260rpx;
}
.shop-wrapper .head-pic image {
  width: 100%;
  height: 100%;
}
.shop-name {
  font-size: 32rpx;
  margin-top: 20rpx;
}
.star-part .star {
  display: inline-block;
  margin: 0 8rpx 0 0;
  line-height: 1;
  width: 16rpx;
  height: 16rpx;
}
.tags {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  line-height: 1;
  color: rgba(136, 145, 169, 1);
  border-bottom: 4rpx dashed rgba(216, 227, 240, 1);
  padding-bottom: 20rpx;
}
.discount {
  font-size: 24rpx;
  color: rgba(191, 165, 113, 1);
  margin-top: 20rpx;
}
.discount .price-wrapper {
  font-size: 16rpx;
  border-radius: 24rpx;
  border-top-right-radius: 0;
  height: 28rpx;
  width: 88rpx;
  line-height: 28rpx;
  border: 1px solid rgba(191, 165, 113, 1);
  margin-bottom: 10rpx;
}
.discount .price-wrapper image {
  width: 16rpx;
  height: 16rpx;
  margin: 0 8rpx;
}