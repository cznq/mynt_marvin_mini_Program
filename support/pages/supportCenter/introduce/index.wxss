/* pages/supportCenter/introduce/index.wxss */
page {
    width: 750rpx;
    height: 100%;
    background-color: #FFFFFF;
}

.banner {
    width: 750rpx;
    height: 448rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 12rpx 92rpx 0rpx rgba(43, 51, 72, 0.03);
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.slide-image {
    width: 748rpx;
    padding: 0 auto;
    height: 360rpx;
}

.tab {
    width: 750rpx;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    box-sizing: border-box;
    background: #FFFFFF;
    box-shadow: 0px 12px 92px 0px rgba(43, 51, 72, 0.03);
}

.fixed {
    position: fixed;
    top: 0;
}

.tabSel {
    width: 132rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: #1A2A4B;
    text-align: center;
    background: #FFFFFF;
    border-bottom: 4rpx solid #FFFFFF;
}

button.tabSel {
    border-radius: 0;
}

.tabLineSel {
    border-bottom: 4rpx solid #092344;
}

.tabLineUnsel {
    border-bottom: 4rpx solid #FFFFFF;
}

.slide-image image {
    width: 100%;
    height: 360rpx;
}

.introduce {
    width: 750rpx;
    height: auto;
    margin-top: 59rpx;
}

.video-view {
    width: 750rpx;
    height: 506rpx;
    padding: 0 33rpx 0 31rpx;
    display: flex;
    align-items: left;
    flex-direction: column;
    box-sizing: border-box;
    background: #FFFFFF;
}

.video-item {
    width: 100%;
}

.video {
    width: 100%;
    height: 386rpx;
}

.video-txt {
    width: 100%;
    height: 32rpx;
    font-size: 32rpx;
    padding: 0 0 31rpx 0;
    font-weight: 500;
    color: #092344;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: left;
}

.pd61 {
    padding: 61 0 31rpx 0;
}

.video-txt .icon {
    width: 10px;
    height: 10px;
    background: #FF9C00;
    border-radius: 50%;
    margin-right: 10rpx;
}

.cover-tab {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background: #FFFFFF;
}