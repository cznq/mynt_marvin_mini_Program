/* pages/supportCenter/introduce/index.wxss */
page {
    width: 750rpx;
    background-color: #FFFFFF;
}

.banner {
    width: 750rpx;
    height: 448rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0rpx 12rpx 92rpx 0rpx rgba(43, 51, 72, 0.03);
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.slide-image {
    width: 748rpx;
    padding: 0 auto;
    height: 360rpx;
}

.tab {
    width: 750rpx;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    box-sizing: border-box;
}

.tabSel {
    width: 120rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: #1A2A4B;
    text-align: center;
    background: #FFFFFF;
    border-bottom: 4rpx solid #FFFFFF;
}

.tabLineSel {
    border-bottom: 4rpx solid #092344;
}

.tabLineUnsel {
    border-bottom: 4rpx solid #FFFFFF;
}

.slide-image image {
    width: 100%;
    height: 360rpx;
}

.introduce {
    width: 750rpx;
    height: 4480rpx;
    margin-top: 58rpx;
}


.swiper {
    width: 100%;
    flex: 1;
    height: 100vh;
    overflow: scroll;
}

.recordItem {
    margin-top: 10rpx;
    background-color: white;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
}