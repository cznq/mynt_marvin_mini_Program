<!--pages/supportCenter/introduce/index.wxml-->
<view class="page">
    <view class="banner">
        <view class="slide-image">
            <image src="{{aaa}}"></image>
        </view>
        <view class='tab'>
            <view class="tabSel {{currentIndex == 0 ? 'tabLineSel':''}}" bindtap='tabClick' data-idx='0'>
                <text>图片</text>
            </view>
            <view class="tabSel {{currentIndex == 1 ? 'tabLineSel':''}}" bindtap='tabClick' data-idx='1'>
                <text>视频</text>
            </view>
        </view>
    </view>
    <view class="introduce">
        <swiper class='swiper' bindchange='pagechange' current='{{currentIndex}}'>
            <swiper-item class='swiper'>
                <view wx:for="{{imageList}}" wx:key="{{key}}" class='recordItem'>
                    <view class='name'>图片{{item}}</view>
                </view>
            </swiper-item>
            <swiper-item class='swiper' class='swiper'>
                <view wx:for="{{videoList}}" wx:key="{{key}}" class='recordItem'>
                    <view class='name'>视频{{item}}</view>
                </view>
            </swiper-item>
        </swiper>
    </view>
</view>