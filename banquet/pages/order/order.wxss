@import '../../../templates/noneData/noneData.wxss'

.padding0-33 {
  padding: 0 66rpx;
}

page {
  background: rgba(240, 242, 245, 1);
  color: #1A2A4B;
}

.orderTitle {
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 100;
  background-color: #fff;
  box-sizing: border-box;
}

.moveUp108 {
  margin-top: 270rpx;
}

.orderTitle .box {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(26, 42, 75, 1);
  text-align: center;
}

.title_border05 {
  position: relative;
}

.title_border05::after {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  content: "";
  width: 100%;
  height: 4rpx;
  background-color: rgba(255, 105, 35, 1);
  border-radius: 2rpx;
  z-index: 1;
}

.orderTitle .box .active {
  color: #FF6923
}

.order-content-box {
  margin-top: 100rpx;
  padding: 0 30rpx;
}

.orBlock {
  width: 690rpx;
  background: #fff;
  border-radius: 8px;
  margin-bottom: 20rpx;
}

.orBlock .orStatus {
  width: 100%;
  padding: 33rpx 34rpx;
  box-sizing: border-box;
}

.icon-jiantou {
  color: rgba(124, 130, 157, .3);
  font-size: 22rpx;
  margin-left: 16rpx;
}

.orBlock .orStatus .storeStatus {
  color: #FF6923;
}

.orDetile {
  height: 110rpx;
  padding: 0 10rpx 33rpx 37rpx;
}

.orDetile .detileImg {
  width: 110rpx;
  height: 110rpx;
  border-radius: 10rpx;
  border: 1px solid red;
  margin-right: 45rpx;
}

.orPay {
  padding: 0 37rpx;
}

.orPay .payBox {
  border-top: 1rpx solid rgba(222, 231, 242, 1);
  padding: 22rpx 0;
}

.payBtn {
  width: 158rpx;
  height: 56rpx;
  border: 1rpx solid rgba(255, 105, 35, 1);
  border-radius: 28rpx;
  text-align: center;
  line-height: 47rpx;
  font-weight: 400;
  color: rgba(255, 105, 35, 1);
}