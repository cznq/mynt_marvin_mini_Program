/* banquet/pages/banquet-home/index.wxss */
page{
  background-color: rgba(246, 246, 246, 1);
}
.page {
  background-attachment: fixed;
  background-repeat: repeat-x;
}

.page__hd {
  padding: 1px 60rpx;
}

.page__bd {
  padding: 60rpx 60rpx 0;
  background-color: rgba(246, 246, 246, 1);
}

.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 20rpx;
  line-height: 1;
  font-size: 48rpx;
  color: rgba(8, 28, 51, 1);
}
.title-bar .order-wrapper text{
    color: #1A2A4B;
    font-size: 38rpx;
}
.home-slide {
  margin-top: 40rpx;
}
.home-slide swiper {
  height: 212rpx;
}
.home-slide .swiper-item {
  width: 100%;
  height: 212rpx;
}

.tab {
  font-size: 38rpx;
  color: #8891A9;
  line-height: 1;
  padding: 0 0 46rpx;
  width: 100%;
}

.tab.fixed {
  position: fixed;
  top: 0;
  left: 0;
  padding: 10rpx 60rpx 40rpx;
  background: #fff;
}
.tab text {
  margin-right: 70rpx;
}

.tab text.selected {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(8, 28, 51, 1);
  position: relative;
}

.tab text:last-child {
  margin-right: 0;
}

.tab text.selected::after {
  display: block;
  content: "";
  position: absolute;
  bottom: -16rpx;
  left: 26rpx;
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  border-bottom: 20rpx solid rgba(255, 105, 0, 1);
}

.shop-list {
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
}
.shop-list.pt50{
  padding-top: 100rpx;
}
.shop-list .shop-wrapper {
  width: calc(50% - 7px);
  box-sizing: border-box;
  padding: 20rpx 20rpx 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-right: 14px;
  margin-bottom: 14px;
  box-shadow: 0 0 16rpx rgba(0, 0, 0, 0.05);
}

.shop-list .shop-wrapper:nth-child(2n) {
  margin-right: 0;
}

.shop-wrapper .head-pic {
  width: 100%;
  height: 260rpx;
}

.shop-wrapper .head-pic image {
  width: 100%;
  height: 100%;
}

.shop-wrapper .shop-name {
  font-size: 32rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 80rpx;
  line-height: 1.2;
}

.star-part {
  margin-top: 10rpx;
  height: 28rpx;
}

.star-part .star {
  display: inline-block;
  vertical-align: top;
  margin: 0 8rpx 0 0;
  line-height: 1;
  width: 18rpx;
  height: 16rpx;
}

.tags {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  line-height: 1;
  color: rgba(136, 145, 169, 1);
  border-bottom: 4rpx dashed rgba(216, 227, 240, 1);
  padding-bottom: 16rpx;
}

.discount {
  font-size: 24rpx;
  color: rgba(191, 165, 113, 1);
  margin-top: 20rpx;
}

.discount .price-wrapper {
  font-size: 16rpx;
  font-weight: bold;
  border-radius: 20rpx;
  border-top-right-radius: 0;
  height: 28rpx;
  width: 88rpx;
  line-height: 28rpx;
  border: 1px solid rgba(191, 165, 113, 1);
  margin-bottom: 10rpx;
  overflow: hidden;
}

.discount .price-wrapper image {
  width: 16rpx;
  height: 16rpx;
  margin: 0 8rpx;
  vertical-align: text-bottom;
}

.hotel-discount {
  display: flex;
  justify-content: space-between;
}

.discount .hotel-price image {
  width: 14rpx;
  height: 36rpx;
  margin-right: 2rpx;
  display: inline-block;
}
.discount_tag{
  color: #BFA571;
  font-size: 20rpx;
  line-height: 1;
  border: 1px solid #BFA571;
  padding:4rpx 8rpx;
  display: inline-block;
  margin:0 8rpx 8rpx 0;
}