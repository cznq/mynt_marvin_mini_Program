/* pages/visitor-list/list/index.wxss */
@import "../../../templates/noneData/noneData.wxss";

page {
    background: linear-gradient(0deg, rgba(255, 255, 255, 1), rgba(252, 252, 252, 1));
}

.block_fixed {
    width: 750rpx;
    z-index: 9999;
    height: 190rpx;
    left: 0;
    top: 0;
}

/*访客列表标题*/
.head {
    width: 750rpx;
    height: 112rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 12px 92px 0px rgba(43, 51, 72, 0.03);
}

.head text {
    height: 56rpx;
    font-size: 60rpx;
    font-weight: 500;
    color: #1A2A4B;
    padding: 24rpx 0 34rpx 62rpx;
}

/*条件过滤*/
.filter {
    width: 750rpx;
    height: 78rpx;
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.5);
}

.filter .filter-view {
    width: 375rpx;
    display: flex;
    align-items: center;
    height: 78rpx;
    box-shadow: 0px 12px 92px 0px rgba(43, 51, 72, 0.03);
    z-index: 999;
    font-weight: 500;
    color: #1A2A4B;
}

.filter .filter-time {
    justify-content: flex-start;
    padding-left: 146rpx;
}

.filter .filter-type {
    justify-content: flex-end;
    padding-right: 147rpx;
}

.filter .filter-view .arrow {
    width: 11rpx;
    height: 19rpx;
    margin-left: 16rpx;
    transform: rotate(90deg);
}

.filter .filter-view .arrow.active {
    transform: rotate(270deg);
    transition: all .3s;
}

.filter .filter-view li {
    height: 79rpx;
    color: #1A2A4B;
    box-sizing: border-box;
    border-bottom: 1rpx solid rgba(220, 220, 220, 0.5);
}

/*下拉框过滤*/
.filter .filter-view .seleTime,
.filter .filter-view .seleType {
    position: absolute;
    top: 192rpx;
    left: 0;
    width: 750rpx;
    background: rgba(255, 255, 255, 1);
    padding-left: 57rpx;
    overflow: hidden;
    height: 0;
    transition: height .3s;
}

.filter .filter-view .seleTime.active {
    height: 320rpx;
    transition: height .3s;
}

.filter .filter-view .seleType.active {
    height: 243rpx;
    transition: height .3s;
}


.filter .filter-view li:last-child {
    border-bottom: 0;
}

/*搜索框*/
.content {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin: 55rpx 60rpx 0 60rpx;
}

.content .search {
    width: 630rpx;
    height: 60rpx;
    background: rgba(136, 145, 169, 0.1);
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 6rpx 32rpx;
}

.content .search-input {
    width: 500rpx;
    height: 60rpx;
    background: rgba(136, 145, 169, 0.1);
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 6rpx 32rpx;
}

.content .cancel-btn {
    color: rgba(26, 42, 75, 1);
    background: #FFFFFF;
    height: 60rpx;
    line-height: 60rpx;
}

/*访客列表*/
.list {
    width: 750rpx;
    background: linear-gradient(0deg, rgba(255, 255, 255, 1), rgba(252, 252, 252, 1));
    /*margin-top: 365rpx;*/
    position: relative;
}

.list .visitor {
    width: 629rpx;
    height: 70rpx;
    margin-top: 90rpx;
    padding: 0 0 0 61rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.list .visitor .visit-left {
    width: 350rpx;
}

.list .visitor .visit-left ._ellipsis {
    margin-top: 1rpx;
}

.list .visitor .visit-left .visit-to {
    color: #1A2A4B;
    font-size: 36rpx;
    font-weight: normal;
}

.list .visitor .visit-left .visit-from {
    font-size: 22rpx;
    font-weight: 500;
    color: #8891A9;
}

.list .visitor .visit-right {
    width: 260rpx;
    height: 21rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(136, 145, 169, 1);
    line-height: 38rpx;
    opacity: 0.6;
    display: flex;
    justify-content: flex-end;
}

.list .visit-time {
    display: flex;
    align-items: flex-end;
}

.list .visitor .vipicon {
    right: 64rpx;
    top: 30rpx;
    width: 50rpx;
    height: 44rpx;
}

.list image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    float: left;
    margin-right: 20rpx;
}

.list .visitor .visit-left-no-invite {
    width: 350rpx;
    display: flex;
    align-items: center;
}

/*未预约访客样式*/
.list .visitor .visit-left .visit-no-invite {
    display: flex;
    align-items: center;
}

/*遮盖层*/
.mask {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.1);
    z-index: 998;
}

.showNoneData {
    overflow: none;
    margin-top: 165rpx;
}

/*没有访客头像样式*/
.no-image-letter {
    float: left;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    background-color: #6092FE;
    color: #FFFFFF;
    text-align: center;
    line-height: 90rpx;
    font-size: 50rpx;
    font-weight: 400;
}