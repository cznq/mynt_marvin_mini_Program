page, .page-body {
  width: 100%;
  padding: 0;
  overflow: hidden;
  position: relative;
}
.page-body::before {
  content: "";
  display: block;
  height: 4px;
  width: 100%;
  background: #4d65f5;
}
.page-body {
  width: 100%;
}
.page-body-wrapper {
  padding: 0px 20rpx 20rpx;
  box-sizing: border-box;
  position: relative;
  width: 100%;
  text-align: center;
}
.face-recode {
  margin: 100rpx auto 80rpx;
  width: 251px;
  height: 251px;
}
.face-recode image {
  width: 100%;
  height: 100%;
}
.cameraErrorText {
  position: absolute;
  top: 150px;
  left: 0;
  right: 0;
}
.tips-title {
  font-size: 36rpx;
  font-weight: 700;
}
.tips-intro {
  color: rgba(30,30,30,.5);
  font-size: 28rpx;
  margin: 10rpx 20rpx 0;
}
.circle {
  position: absolute;
  top: 0px;
  left: 0;
  right: 0;
  z-index: 100;
}
canvas {
  position: absolute;
  top: 0;
  right: -300px;
  height: 300px;
  width: 300px;
}
.btn-frame { 
  width: 200px;
  margin: 60rpx auto;
}
.btn-frame .btn {
  background-color: #4d65f5;
  border: 2px solid #fff;
  border-radius: 25px;
  text-align: center;
  height: 43px;
  line-height: 43px;
  color: #fff;
  font-size: 17px;
}