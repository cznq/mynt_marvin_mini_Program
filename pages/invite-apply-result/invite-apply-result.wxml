<!--pages/invite-apply-notice/invite-apply-notice.wxml-->
<view class="page" wx:if="{{applyInfo}}">
  <view wx:if="{{apply_status}}" class="page__hd {{apply_status.status}}">
    <view class="status">
      <view class="status-icon">
        <image src="{{apply_status.status_icon}}" mode="widthFix"></image>
      </view>
      <view class="status-text">
        <view class="status-title">{{apply_status.status_title}}</view>
        <view>{{apply_status.status_info}}</view>
      </view>
    </view>
    <view wx:if="{{apply_status.step}}" class="status-step">
      <view class="step__bar"></view>
      <view class="step-icon-wrapper">
        <view class="step-icon on">
            <image src="../../images/stepon@2x.png"></image>
            <text>申请已提交</text>
          </view>
          <view class="step-icon {{apply_status.step.first}}">
            <image src="../../images/step{{apply_status.step.first}}@2x.png"></image>
            <text>申请已通过</text>
          </view>
          <view class="step-icon {{apply_status.step.second}}">
            <image src="../../images/step{{apply_status.step.second}}@2x.png"></image>
            <text>成功取卡</text>
          </view>
      </view>
    </view>
    
  </view>

  <view class="take-card-guide" wx:if="{{apply_status.status == 'passed'}}">
      <view class="guide-title">前往机器人取卡</view>
      <view class="guide-info">公司已通过了您的访问申请，请前往机器人处取卡。</view>
      <image src="../../images/take_card_graphic@2x.png" mode="widthFix"></image>
  </view>
 
  <view class="page__bd">
    
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <view class="company-short-name">{{applyInfo.company.company_short_name}}</view>
        <view class="full-name">{{applyInfo.company.company_name}}</view>
      </view>
      <view class="weui-cell__ft">
          <image class="company-logo" src="{{applyInfo.company.logo}}" mode="widthFix"></image>
      </view>
    </view>

    <view class="com-detail">
      <view class="company-intro">
      {{applyInfo.company.introduction}}
      </view>
      <view class="address">
        <text>门牌号：</text>{{applyInfo.company.room}}
      </view>
      <view class="address">
        <text>电话：</text>{{applyInfo.company.phone}}
      </view>
      <view class="address">
        <text>网址：</text>{{applyInfo.company.website}}
      </view>
    </view>

    <view class="weui-media-box ">
      <view class="weui-media-box__title">公司宣传 </view>
      <view class="weui-media-box__desc">
        <block wx:if="{{showVideo}}">
          <view class="vedioWrapper">
            <video id="cmpVideo" src="{{applyInfo.company.video_url}}" show-center-play-btn="true" autoplay="true" controls></video>
          </view>
        </block>
        <block wx:else>
          <scroll-view scroll-x style="height: 242rpx;white-space:nowrap;" bindscroll="scroll" class="crouse-pics">
            <block wx:for="{{applyInfo.company.product_pic_urls}}" wx:for-index="idx" wx:for-item="item" wx:key="product_pic_url">
              <image src="{{item}}" mode="widthFix"></image>
            </block>
          </scroll-view>
        </block>
      </view> 
    </view>
    <view class="contact">
      <button bindtap="makePhoneCall" id="{{applyInfo.company.phone}}"><image src="../../images/tel.png" mode="widthFix"></image>联系前台</button>
      <view>若长时间无人通过，可拨打前台电话咨询</view>
    </view>

  </view>
  <view class="little-pannel"></view>
  <view class="page__ft">
    <view class="wechat">
      <image src="../../images/qrcode.png" mode="widthFix" bindtap="identifyQrcode"></image>
      <view>长按识别关注</view>
      <view>小觅智能楼宇服务</view>
    </view>
  </view>
</view>
