/* pages/checkfollow/index.wxss */
@import "../create-company/public/style.wxss";
@import "../../templates/showToast/showToast.wxss";

/*page{background: #f9fafb;}*/

.checkfollow {
  padding-top: 60rpx;
}

.image {
  margin: 0 auto;
  display: block;
  width: 100%;
}

.checkbox-group {
  color: #1a2a4b;
  font-size: 24rpx;
  padding-left: 163rpx;
  padding-bottom: 32rpx;
  display: block;
  font-weight: 300;
}

.checkbox-group checkbox {
  transform: scale(0.6);
  margin: 0 -14rpx 0 0;
  vertical-align: 2rpx;
  border-radius: 50%;
}

.checkbox-group checkbox .wx-checkbox-input {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f2f3f6;
}

.checkbox-group checkbox .wx-checkbox-input-checked {
  border-color: #64db89;
  background: #64db89;
}

.checkbox-group checkbox .wx-checkbox-input-checked::before {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
}

button[disabled] {
  background: rgba(0, 123, 255, 0.2) !important;
  color: #fff !important;
}

.toast2 {
  top: 69%;
}

.toast-title {
  white-space: pre-wrap;
  line-height: 1.4;
  width: 400rpx;
}
