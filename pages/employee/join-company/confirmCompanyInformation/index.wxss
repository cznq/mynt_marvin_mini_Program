/*邀请信息*/
._cview_show {
    width: 650rpx;
    margin: 46rpx 50rpx 0 50rpx;
}

._cview_show .invite_info {
    float: left;
}

._cview_show .invite_icon {
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    background-color: #6092FE;
    color: #FFFFFF;
    text-align: center;
    line-height: 60rpx;
    font-size: 24rpx;
    font-weight: 400;
}

._cview_show .invite_text {
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 19rpx;
    width: auto;
    font-size: 36rpx;
    font-weight: 500;
    color: #1A2A4B;
}

.c_logo image,
.c_logo_invite image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.input_block ._button {
    width: 560rpx;
    margin: 40rpx 0 15rpx 0;
}

.Name_header {
    border-bottom: 0;
    margin-bottom: 0;
}

.mynt_logo_gray {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}