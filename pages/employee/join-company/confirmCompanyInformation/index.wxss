}

.enterRealName {
    width: 670rpx;
    height: auto;
    border-radius: 10rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0rpx 6rpx 20rpx 0rpx rgba(41, 56, 86, 0.04);
    margin: 0 auto;
}

.enterRealName .Name_header .recodeTitle {
    padding-top: 100rpx;
}

.Name_content .input_block .textarea_text {
    width: 500rpx;
}

.cview_logo_invite {
    height: 174rpx;
}

.cview_logo {
    height: 114rpx;
}

.cview_invite {
    height: 100rpx;
}

.cview_no_logo_invite {
    height: 76rpx;
}

.c_logo_invite {
    width: 123rpx;
    height: 123rpx;
    border-radius: 10rpx;
    left: 50%;
    margin-left: -61rpx;
    top: 157rpx;
    background: #fff;
    border: 1rpx solid #ddd;
}

.c_logo {
    width: 123rpx;
    height: 123rpx;
    border-radius: 10rpx;
    left: 50%;
