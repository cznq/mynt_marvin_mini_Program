<!--pages/employee/senior-executive/addBoss/index.wxml-->
<view class="page">
    <view class="page__hd">
        <text class="_font60 _fontw700">选择一位员工</text>
        <view class="_font28 _txt_darkgrey">将TA指定为您公司的高管</view>
    </view>
    <view class="page_bd">
        <view class="admin-list">  
            <!-- 管理员列表 -->
            <block wx:for="{{staffList.employee}}" wx:key="">
                <view class="_list_item _flex _flex_space_between _role_admin" wx:if="{{item.role == 3}}">
                    <view class=" {{disabled?'disabled':''}}">
                        <view class="_lft _flex _flex_item_center">
                            <view class="_family_name">{{item.first_name}}</view>
                            <view class="_name _fontw500 _font34">{{item.employee_name}}</view>
                        </view>
                        <view class="_rgt _flex _flex_item_center">
                        </view>
                    </view>
                </view>
            </block>
        </view>
        <!-- 前台列表 -->
        <view class="boss-list">  
            <block wx:for="{{staffList.employee}}" wx:key="">
                <view class="_list_item _flex _flex_space_between _role_front" wx:if="{{item.role == 2}}">
                    <view class=" {{disabled?'disabled':''}}">
                        <view class="_lft _flex _flex_item_center">
                            <view class="_family_name">{{item.first_name}}</view>
                            <view class="_name _fontw500 _font34">{{item.employee_name}}</view>
                        </view>
                        <view class="_rgt _flex _flex_item_center">
                        </view>
                    </view>
                </view>
            </block>
        </view>
        <!-- 员工列表 -->
        <view class="staff-list">  
            <block wx:for="{{staffList.employee}}" wx:key="">
                <view class="_list_item _flex _flex_space_between _role_staff" wx:if="{{item.role == 1}}" bindtap="selectBoss" id="{{index}}" data-id="{{item.union_id}}">
                    <view class=" {{disabled?'disabled':''}}">
                        <view class="_lft _flex _flex_item_center">
                            <view class="_family_name">{{item.first_name}}</view>
                            <view class="_name _fontw500 _font34">{{item.employee_name}}</view>
                        </view>
                        <view class="_rgt _flex _flex_item_center">
                            <checkbox checked="{{index==checkId?'checked':''}}"/>
                        </view>
                    </view>
                </view>
            </block>
        </view>
    </view>
</view>
