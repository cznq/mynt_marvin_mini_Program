/** 搜索框 **/
.search {
  position: relative;
}
.search-input {
  background-color: rgba(136, 145, 169, 0.11);
  border-radius: 10rpx;
  padding: 0 30rpx 0 80rpx;
  height: 56rpx;
}
.search-btn {
  position: absolute;
  left: 20rpx;
  top: 0;
  height: 56rpx;
  width: 56rpx;
  padding: 0;
  line-height: 56rpx;
  text-align: center;
  background-color: transparent;
}
.icon-sousuo { color: #8891a9 }
.search-placeholder {
  color: rgba(136, 145, 169, .3);
}
