}
.company-info {
  line-height: 1;
  padding-bottom: 64rpx;
  padding-top: 50rpx;
  border-bottom: 2rpx solid rgba(220, 220, 220, .5)
}
.company-info::before,
.company-info::after {
  content: '';
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: RGBA(240, 241, 242, 1);
  position: absolute;
  top: 210rpx;
}
.noLogo .company-info::before,
.noLogo .company-info::after {
  top: 180rpx;
}
.company-info::before {
  left: -18rpx; 
}
.company-info::after {
