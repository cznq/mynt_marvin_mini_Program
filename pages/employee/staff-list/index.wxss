@import "../../../templates/showMenu/showMenu.wxss";
@import "../../../templates/showToast/showToast.wxss";

page {
  background: #F9FAFB;
}
.page__hd {
  padding: 32rpx 60rpx;
  line-height: 1;
  background: #fff;
}
.iconfont.icon-tianjiayuangong {
  font-size: 52rpx;
}
.page__bd {
  padding: 54rpx 60rpx;
  background: #F9FAFB;
}
.new-staff-btn {
  background: transparent;
  border: 1px solid rgba(0,0,0,.1);

}
._num_info {
  margin: 0 18rpx;
}
.staff-list {
  padding-top: 30rpx;
}
._list_item {
  padding: 60rpx 0 30rpx;
}
.admin-list, .front-list {
  border-bottom: 2rpx solid rgba(0,0,0,.1);
}
._list_item._role_staff {
  padding: 30rpx 0;
}
.handle_btn {
  width: 46rpx;
  height: 46rpx;
  border-radius: 24rpx;
  box-sizing: border-box;
  border: 1px solid rgba(0,0,0,.1);
  line-height: 46rpx;
  text-align: center;
  vertical-align: middle;
}
.handle_btn .iconfont {
  font-size: 6rpx;
}
._role_admin ._family_name {
  background-color: #484F62;
}
._role_front ._family_name {
  background-color: #F9922F;
}
._role_staff ._family_name {
  background-color: #6092FE;
}
.icon-qiantai {
  color: #F9922F;
  font-size: 36rpx;
  margin: 0 28rpx 0 10rpx; 
}
.icon-qiantai.admin {
  color: #484F62;
}

page, .page {
  height: 100%;
}
.noneWrapper {
  height: 100%;
  width: 100%;
}
.icon-kongyemian {
  color: #b6bac9;
  font-size: 180rpx;
  text-align: center;
}
.invite_info {
  font-size: 28rpx;
  color: #8891A9;
}
.invte-btn {
  color: #1F2F4F;
  height: 66rpx;
  line-height: 66rpx;
  margin: 88rpx 0 80rpx;
}