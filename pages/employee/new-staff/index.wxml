      <text class="_font60 _fontw700">新申请员工</text>
  </view>
  <view class="page__bd">
    <block>
      <view class="staff_list">
      <!-- 员工列表 -->
      <view class="staff-list">
        <view class="_list_item _flex _flex_space_between">
