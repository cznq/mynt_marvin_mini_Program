            <view class="_name _fontw500">停生</view>
          </view>
          <view class="_rgt _flex _flex_item_center">
            <button class="btn refuse" bindtap="refuseApply">拒绝</button>
            <button class="btn allow" bindtap="allowApply">同意</button>
          </view>
        </view>
        <view class="_list_item _flex _flex_space_between">
          <view class="_lft _flex _flex_item_center">
            <view class="_family_name">张</view>
            <view class="_name _fontw500">无忌</view>
          </view>
          <view class="_rgt _flex _flex_item_center">
            <text class="status _fontw300">通过申请</text>
          </view>
        </view>
        <view class="_list_item _flex _flex_space_between">
          <view class="_lft _flex _flex_item_center">
            <view class="_family_name">范</view>
            <view class="_name _fontw500">停生</view>
          </view>
          <view class="_rgt _flex _flex_item_center">
            
          </view>
        </view>
      </view>

      </view>
    </block>
  </view>
   
</view>

