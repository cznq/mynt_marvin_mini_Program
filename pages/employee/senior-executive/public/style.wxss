.page_bd {
  padding-top: 100rpx;
}
.page_bd.noLogo {
  padding-top: 50rpx;
}
.invite-wrapper {
  background-color: #fff;
  margin: 0 40rpx;
  border-radius: 10rpx;
  position: relative;
  box-shadow: rgba(0, 0, 0, 0.06) 0 0 122rpx;
}
.company-info {
  line-height: 1;
  padding-bottom: 64rpx;
  padding-top: 50rpx;
  border-bottom: 2rpx solid rgba(220, 220, 220, .5)
}
.company-info::before,
.company-info::after {
  content: '';
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: RGBA(240, 241, 242, 1);
  position: absolute;
  top: 210rpx;
}
.noLogo .company-info::before,
.noLogo .company-info::after {
  top: 180rpx;
}
.company-info::before {
  left: -18rpx; 
}
.company-info::after {
  right: -18rpx; 
}
.company-info ._logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-top: -150rpx;
  margin-bottom: 26rpx;
}
.company-info ._name {
  color: rgba(26, 42, 75, 1);
}
.company-info ._short_name {
  color: rgba(136, 145, 169, 1);
  margin-top: 16rpx;
}
.icon-jiantou {
  color: rgba(124, 130, 157, .3);
  font-size: 22rpx;
  margin-left: 16rpx;
}

.invite-info {
  padding: 58rpx 40rpx 64rpx;

}
.invite-info ._sec {
  padding-bottom: 34rpx;
  border-bottom: 2rpx solid rgba(220, 220, 220, .5);
}
.int-title {
  line-height: 1;
}
.int-intro {
  color: rgba(26, 42, 75, 1);
  line-height: 42rpx;
  margin-top: 34rpx;
}
.int-item-name {
  margin-top: 38rpx;
  color: rgba(136, 145, 169, 1);
}
.int-item-info {
  color: rgba(26, 42, 75, 1);
  font-weight: 600;
}
map {
  height: 250rpx;
  width: 100%;
  margin-top: 24rpx;
}
.know-list-title {
  color: rgba(26, 42, 75, 1);
  margin-bottom: 20rpx;
}
.know-list {
  color: rgba(136, 145, 169, 1);
  font-size: 26rpx;
  line-height: 40rpx;
}
.know-list ._num {
  margin-right: 10rpx;
}
._ft_logo {
  padding: 64rpx 0 0;
}
.footer {
  background: #ccc;
  left:0;
  bottom:0;
  width:100%;
  padding:30rpx 0;
  background: rgba(253, 254, 254, .96);
  border-top:1rpx solid #eeeeee;
  z-index: 101;
}
.footer.iphonex {
  padding-bottom: 110rpx;
}
.footer button {
  color: #fff!important;
}
._button.back_btn {
  width: 156rpx;
  margin-right: 0;
  background-color: #fff;
  color: rgba(26, 42, 75, 1)!important;
  border: 2rpx solid rgba(0,0,0,.05);
}
._button.share_btn {
  margin-left: 32rpx;
  width: 442rpx;
  background: rgba(12, 206, 21, 1);
}
.icon-weixin {
  font-size: 42rpx;
  margin-right: 18rpx;
}
.footer button[disabled] {
  background: rgba(71, 95, 253, .2);
}