<!--pages/employee/senior-executive/addBoss/index.wxml-->
<wxs src="../../../../wxs/subutil.wxs" module="tools" />
<view class="page">
    <view class="page__hd">
        <text class="_font60 _fontw700">选择一位员工</text>
        <view class="_font28 _txt_darkgrey">将TA指定为您公司的高管</view>
    </view>
    <view class="page_bd">
        <view class="admin-list">  
            <!-- 管理员列表 -->
            <block wx:for="{{staffList.admin}}" wx:key="">
                <view class="_list_item _role_admin" bindtap="selectBoss" data-id="{{item.union_id}}" data-type="{{item.person_type}}">
                    <view class="_flex _flex_space_between {{item.person_type == 3 ?'disabled':''}}">
                        <view class="_lft _flex _flex_item_center">
                            <view class="_family_name">{{tools.getFirstLetter(item.employee_name)}}</view>
                            <view class="_name _fontw500 _font34">{{item.employee_name}}</view>
                        </view>
                        <view class="_rgt _flex _flex_item_center">
                            <checkbox checked="{{item.union_id==unionId?'checked':''}}" wx:if="{{item.person_type == null}}" />
                        </view>
                    </view>
                </view>
            </block>
        </view>
        <!-- 前台列表 -->
        <view class="boss-list">  
            <block wx:for="{{staffList.front_desk.normal}}" wx:key="">
                <view class="_list_item _role_front" bindtap="selectBoss" data-id="{{item.union_id}}" data-type="{{item.person_type}}">
                    <view class=" _flex _flex_space_between {{item.person_type == 3 ?'disabled':''}}">
                        <view class="_lft _flex _flex_item_center">
                            <view class="_family_name">{{tools.getFirstLetter(item.employee_name)}}</view>
                            <view class="_name _fontw500 _font34">{{item.employee_name}}</view>
                        </view>
                        <view class="_rgt _flex _flex_item_center">
                            <checkbox checked="{{item.union_id==unionId?'checked':''}}" wx:if="{{item.person_type == null}}"/>
                        </view>
                    </view>
                </view>
            </block>
            <block wx:for="{{staffList.front_desk.not_active}}" wx:key="">
                <view class="_list_item _role_front" bindtap="selectBoss" data-id="{{item.union_id}}" data-type="{{item.person_type}}">
                    <view class=" _flex _flex_space_between {{item.person_type == 3 ?'disabled':''}}">
                        <view class="_lft _flex _flex_item_center">
                            <view class="_family_name">{{tools.getFirstLetter(item.employee_name)}}</view>
                            <view class="_name _fontw500 _font34">{{item.employee_name}}</view>
                        </view>
                        <view class="_rgt _flex _flex_item_center">
                            <checkbox checked="{{item.union_id==unionId?'checked':''}}" wx:if="{{item.person_type == null}}"/>
                        </view>
                    </view>
                </view>
            </block>
        </view>
        <!-- 员工列表 -->
        <view class="staff-list">  
            <block wx:for="{{staffList.employee}}" wx:key="">
                <view class="_list_item _role_staff" bindtap="selectBoss" data-id="{{item.union_id}}" data-type="{{item.person_type}}">
                    <view class="_flex _flex_space_between {{item.person_type == 3 ?'disabled':''}}">
                        <view class="_lft _flex _flex_item_center">
                            <view class="_family_name">{{tools.getFirstLetter(item.employee_name)}}</view>
                            <view class="_name _fontw500 _font34">{{item.employee_name}}</view>
                        </view>
                        <view class="_rgt _flex _flex_item_center">
                            <checkbox checked="{{item.union_id==unionId?'checked':''}}" wx:if="{{item.person_type == null}}"/>
                        </view>
                    </view>
                </view>
            </block>
        </view>
    </view>
</view>
