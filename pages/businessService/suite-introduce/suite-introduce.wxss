.page {
  width: 750rpx;
  background: rgba(255, 255, 255, 1);
  position: relative;
}

.page__hd {
  padding: 20rpx 40rpx 0;
  height: 64rpx;
  background-color: #03428f;
}

.page__ft {
  width: 100%;
  height: 140rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -4rpx 10rpx 0rpx rgba(0, 0, 0, 0.04);
