/* 弹出付费窗口 */
canvas {
  position: absolute;
  left: -500px;
  top: -300px;
  /* left: 0;
  top: 0; */
}
.modal-bg {
  position: fixed;
  top: 0;
  bottom: 0;
  z-index: 900;
  left: 0;
  right: 0;
  background: rgba(129, 129, 129, .7);
}
.invite-modal {
  position: fixed;
  display: inline-block;
  border-radius: 10rpx;
  text-align: center;
  top: 108rpx;
  left: 50%;
  z-index: 901;
  transform: translate(-50%, 0);
  -moz-transform: translate(-50%, 0);
  -webkit-transform: translate(-50%, 0);
  -ms-transform: translate(-50%, 0);
  color:#1B2B4C;
  background: #fff;
  box-sizing: border-box;
  width: 612rpx;
}
.modal-header {
  padding: 68rpx 96rpx 48rpx; 
  position: relative;
}
.modal-body {
  position: relative;
  border-top: 1px solid rgba(220, 220, 220, .2);
}
.modal-body::before, .modal-body::after {
  content: '';
  width: 10rpx;
  height: 20rpx;
  background-color: rgba(129, 129, 129, .6);
  position: absolute;
  top: -10rpx;
  border-radius: 0 10rpx 10rpx 0;
}
.modal-body::before {
  left: 0;
}
.modal-body::after {
  right: 0!important;
  border-radius: 10rpx 0 0 10rpx;
}
