page {
  padding-bottom:300rpx;
  position: relative;
  background: rgba(249, 250, 251, 1)
}
._content {
  background: rgba(249, 250, 251, 1)
}
.recodeTitle {
  padding-bottom: 16rpx;
  padding-top:50rpx;
  line-height: 1.2;
  color: #1A2A4B;
}
.recodeIntro {
  font-size: 30rpx;
  color: #1A2A4B;
  font-weight: 400;
  line-height: 1.2;
  margin-bottom: 60rpx;
}
.input_block {
  padding-bottom: 25rpx;
  position: relative;
}
icon {
  position: absolute;
  bottom: 50rpx;
  right: 0;
  z-index: 100;
}
._info_btn {
  height: 66rpx;
  margin-bottom: 14rpx;
  margin-top: 14rpx;
}
.input_text {
  padding-bottom: 16rpx;
}
._card_button {
  font-size: 30rpx;
  height: 66rpx;
  line-height: 62rpx;
  display: inline-block;
  width: auto;
  margin-right: 12rpx;
  padding: 0 16rpx;
  background: transparent;
  border: 2rpx solid rgba(238, 238, 238, 1);
}
._card_button.on {
  color: #fff;
  background: rgba(26, 42, 75, 1);
}
.invoice {
  margin-bottom: 30rpx;
  line-height: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  color: rgba(136, 145, 169, 1);
  border-bottom: 1rpx solid rgba(220, 220, 220, .5);
}

.icon-dunpai {
  color: rgba(77, 219, 120, 1);
  font-size: 32rpx;
  margin-right: 16rpx;
}
.footer {
  background: #ccc;
  left:0;
  bottom:0;
  width:100%;
  padding-top: 0;
  background: rgba(253, 254, 254, .96);
  border-top:1rpx solid rgba(220, 220, 220, .5);
}
.footer.iphonex {
  padding-bottom: 110rpx;
}
.footer button {
  background: #007bff;
  color: #fff!important;
}
.footer button[disabled] {
  background: rgba(0, 123, 255, .2);
}
.hide {
  display: none;
}