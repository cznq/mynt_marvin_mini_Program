page, 
.page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
.coverview {
  position: absolute;
  z-index: 100;
  background: #fff;
  width: 100%;
  height: 100%;
}
.camera-bottom-text {
  position: absolute;
  top: 680rpx;
  left: 88rpx;
  right: 88rpx;
}
.circle {
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -50%;
  width: 100%;
}
.step cover-view {
  width: 50%;
}
.step cover-view{background:#E7E8EE;height:6rpx;margin-right:19rpx;border-radius: 6rpx;}
.step .cur{background: #007bff;}

.collect-information {
  padding-bottom:300rpx;
  position: relative;
}
.recodeTitle {
  padding-bottom: 20rpx;
  padding-top:60rpx;
  line-height: 1.2;
  color: #1A2A4B;
}
.recodeIntro {
  font-size: 30rpx;
  color: #1A2A4B;
  font-weight: 400;
  margin-bottom: 80rpx;
  white-space: pre-wrap;
}
.txt {
  margin-top: 52rpx;
  line-height: 48rpx;
  white-space: pre-wrap;
}
.bottom-txt {
  width: 372rpx;
  margin: 10rpx auto;
  text-align: center;
}
.step {
  padding-top:30rpx;
}
.face-pic {
  width: 172rpx;
  margin: 67rpx auto 0;
}
.collect-information .face-pic {
  margin: 200rpx auto 0;
}
canvas {
  position: absolute;
  bottom: -300px;
  left: 0;
  height: 300px;
  width: 300px;
}
.footer {
  height:240rpx;
  background: #ccc;
  left:0;
  bottom:0;
  width:100%;
  padding-top:30rpx;
  background: linear-gradient(to bottom,#fafbfb 0%,#fcfdfd 60%,#fcfdfd 60%,#fcfdfd 100%);
  border-top:1rpx solid #eeeeee;
}
.footer button {
  background: #007bff;
  color: #fff!important;
}
._button.back_btn {
  width: 156rpx;
  margin-right: 0;
  background-color: #fff;
  color: rgba(26, 42, 75, 1)!important;
  border: 2rpx solid rgba(0,0,0,.05);
}
._button.next_btn {
  margin-left: 32rpx;
  width: 442rpx;
}
.footer button[disabled] {
  background: rgba(71, 95, 253, .2);
}