@import "../../../templates/showToast/showToast.wxss";
page, 
.page {
  width: 100%;
  height: 100%;
}
.page__bd {
  height: 100%;
  position: relative;
}
.warn {
  color: #fff;
  position: absolute;
  top: 60rpx;
  left: 50%;
  margin-left: -300rpx;
  width: 600rpx;
  z-index: 99;
}
.warn .txt {
  color: #fff;
  font-weight: 300;
  text-align: center;
  font-size: 32rpx;
  line-height: 46rpx;
}
.circle {
  position: absolute;
  left: 50%;
  top: 0;
  z-index: 98;
  margin-left: -50%;
  width: 100%;
  height: 952rpx;
}
.timerCounter {
  position: absolute;
  z-index: 100;
  color: #fff;
  width: 150rpx;
  height: 52rpx;
  bottom: 148rpx;
  left: 50%;
  font-size: 34rpx;
  box-sizing: border-box;
  margin-left: -75rpx;
  text-align: center;
  line-height: 52rpx;
  border-radius: 26rpx;
  background-color: rgba(0, 0, 0, .5);
}
.reddot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  background-color: rgba(245, 86, 58, 1);
}

.footer {
  left:0;
  bottom:0;
  width:100%;
  padding:0;
  border-top: none;
  z-index: 101;
  background: transparent;
}
.footer.iphonex {
  padding-bottom: 110rpx;
}
._button {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 0;
  color: #fff!important;
}
._start_button {
  background: rgba(0, 123, 255, 1);
}
.uploadTxt {
  color: #fff;
  font-size: 34rpx;
  font-weight: 700;
  padding-bottom: 68rpx;
}
.uploadTxt .uptxt {
  text-align: center;
  margin-bottom: 28rpx;
}
.progressBar {
  width: 444rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: rgba(208, 208, 208, 1);
}
.progressBar .progress {
  height: 100%;
  border-radius: 6rpx;
}
.progressBar .active {
  background-color: rgba(0, 123, 255, 1);
}