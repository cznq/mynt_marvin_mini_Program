@import "../../../templates/showToast/showToast.wxss";
page, 
.page {
  width: 100%;
  height: 100%;
}
.page__bd {
  height: 100%;
  position: relative;
}
.circle {
  position: absolute;
  left: 50%;
  top: 0;
  z-index: 98;
  margin-left: -50%;
  width: 100%;
  height: 722rpx;
}
.recodeWarn {
  text-align: center;
  padding: 30rpx 0 60rpx;
}
.recodeWarn image {
  width: 130rpx;
  height: 124rpx;
  margin: 0 auto 24rpx;
}
.recodeWarn view {
  color: rgba(26, 42, 75, 1);
  line-height: 1;
}
.tempFile {
  width: 750rpx; 
  height: 724rpx;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -50%;
  z-index: 97;
}
.mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .2);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 102;
}
.footer {
  left:0;
  bottom:0;
  width:100%;
  border-top: none;
  z-index: 101;
  background: #fff;
}
.footer.iphonex {
  padding-bottom: 110rpx;
}
.check-part {
  width: 560rpx;
  margin: 0 auto;
}
.check-part ._font34 { 
  line-height: 48rpx;
  color: rgba(26, 42, 75, 1);
}
.num-col {
  width: 520rpx;
  height: 110rpx;
  margin: 30rpx auto 0;
  background-color: rgba(232, 236, 241, 1);
}
.num-col .num {
  font-size: 62rpx;
  line-height: 110rpx;
  position: relative;
  width: 25%;
}
.num-col .num:after {
  content: '';
  width: 2rpx;
  height: 68rpx;
  background: rgba(210, 216, 223, 1);
  position: absolute;
  right: 1px;
  top: 21rpx;
} 
.num-col .num:last-child:after {
  width: 0;
}
._button {
  height: 100rpx;
  line-height: 100rpx;
  color: #fff!important;
}
._start_button {
  margin-top: 68rpx;
  background: rgba(0, 123, 255, 1);
}
.uploadTxt {
  color: rgba(26, 42, 75, 1);
  height: 100rpx;
  margin-top: 68rpx;
  padding: 10rpx 0 20rpx;
  box-sizing: border-box;
}
.uploadTxt .uptxt {
  text-align: center;
  font-size: 28rpx;
  margin-top: 22rpx;
  line-height: 1;
}
.progressBar {
  width: 360rpx;
  height: 8rpx;
  margin: 0 auto;
  border-radius: 4rpx;
  background-color: rgba(208, 208, 208, 1);
}
.progressBar .progress {
  height: 100%;
  border-radius: 4rpx;
}
.progressBar .active {
  background-color: rgba(0, 123, 255, 1);
}