@import "../../../templates/showToast/showToast.wxss";
page, 
.page {
  width: 100%;
  height: 100%;
}
.page__bd {
  height: 100%;
  position: relative;
}
.circle {
  position: absolute;
  left: 50%;
  top: 0;
  z-index: 98;
  margin-left: -50%;
  width: 100%;
  height: 722rpx;
}
.recodeWarn {
  text-align: center;
  padding: 30rpx 0 60rpx;
}
.recodeWarn image {
  width: 130rpx;
  height: 124rpx;
  margin: 0 auto 24rpx;
}
.recodeWarn view {
  color: rgba(26, 42, 75, 1);
  line-height: 1;
}

.footer {
  left:0;
  bottom:0;
  width:100%;
  border-top: none;
  z-index: 101;
  background: #fff;
}
.footer.iphonex {
  padding-bottom: 110rpx;
}
.check-part {
  padding-top: 30rpx;
}
.check-part text { line-height: 1;color: rgba(26, 42, 75, 1);}
.num-col {
  width: 534rpx;
  height: 120rpx;
  margin: 30rpx auto 78rpx;
  background-color: rgba(232, 236, 241, 1);
}
.num-col .num {
  font-size: 64rpx;
  line-height: 120rpx;
  position: relative;
  width: 25%;
}
.num-col .num:after {
  content: '';
  width: 2rpx;
  height: 68rpx;
  background: rgba(210, 216, 223, 1);
  position: absolute;
  right: 1px;
  top: 26rpx;
} 
.num-col .num:last-child:after {
  width: 0;
}
._button {
  height: 120rpx;
  line-height: 120rpx;
  color: #fff!important;
}
._start_button {
  background: rgba(0, 123, 255, 1);
}
.uploadTxt {
  color: rgba(26, 42, 75, 1);
  padding-bottom: 42rpx;
}
.uploadTxt .uptxt {
  text-align: center;
  font-size: 28rpx;
  margin-top: 22rpx;
  line-height: 1;
}
.progressBar {
  width: 360rpx;
  height: 8rpx;
  margin: 0 auto;
  border-radius: 4rpx;
  background-color: rgba(208, 208, 208, 1);
}
.progressBar .progress {
  height: 100%;
  border-radius: 4rpx;
}
.progressBar .active {
  background-color: rgba(0, 123, 255, 1);
}