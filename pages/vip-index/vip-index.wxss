/* pages/vip-index/vip-index.wxss */
.page {
  padding: 0 20px;
}
.page_hd {
  padding: 40px 0 20px;
  text-align: center;
  font-size: 29px;
  font-weight: 600;
  position: relative;
}
.page_hd:after {
  content: '';
  height: 1px;
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #eaeaea;
}
.title {
  font-size: 17px;
  line-height: 1.4;
  font-weight: 600;
  margin: 30px 0 10px;
}
.intro {
  font-size: 13px;
  line-height: 1.8;
}
.function {
  text-align: center;
  margin-top: 30px;
}
.page__ft {
  position: fixed;
  bottom: 0;
  padding: 20px;
  left: 0;
  right: 0;
}
.page__ft button {
  background-color: #4d65f5;
  color: #fff;
  border: none;
  border-radius: 23px;
}