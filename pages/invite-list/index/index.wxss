@import "../../../templates/noneData/noneData.wxss";
page{
  background: #F9FAFB;
}
.headTab{
  position: relative;
  height: 114rpx;
  background: #fff;
  color: #1a2a4b;
  z-index: 999;
}
.allInvite{
  height: 114rpx;
  line-height: 114rpx;
  margin-right: 167rpx;
  font-size: 32rpx;
  padding:0 7rpx;
  box-sizing: border-box;
}
.allInvite.active{
  font-size: 43rpx;
  color:rgba(26 , 42, 75, 1);
  font-weight: 500;
  border-bottom:6rpx solid rgba(71, 95, 253, 1);
  border-radius:5rpx 5rpx 2rpx 2rpx;
}
.myInvite{
  height: 114rpx;
  line-height: 114rpx;
  font-size: 32rpx;
  padding:0 7rpx;
  box-sizing: border-box;
}
.myInvite.active{
  font-size: 43rpx;
  color:rgba(26 , 42, 75, 1);
  font-weight: 500;
  border-bottom:6rpx solid rgba(71, 95, 253, 1);
  border-radius:5rpx 5rpx 2rpx 2rpx;
}
.allTime{
  position: relative;
  height: 78rpx;
  background-color: rgba(255, 255, 255, 0.5);
  z-index: 999;
}
.allTime .arrow{
  width: 11rpx;
  height: 19rpx;
  margin-left: 16rpx;
}
.allTime .arrow.active{
  transform:rotate(90deg);
  transtion:all 1s;
}
.seleTime{
  position: absolute;
  top:78rpx;
  left:0;
  width:750rpx;
  background-color: #fff;
  padding:0 50rpx;
  overflow: hidden;
  height: 0;
  transition: height .3s;
}
.seleTime.active{
  height: 316rpx;
  transition: height .3s;
}
.seleTime li{
  height: 79rpx;
  color:#1A2A4B;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.5);
}
.seleTime li:last-child{
  border-bottom: 0;
}
.mask{
  position: absolute;
  top:0;
  bottom:0;
  left: 0;
  right:0;
  background: rgba(0, 0, 0, 0.1);
  z-index: 998;
}
.content{
  padding:55rpx 60rpx 0;
}
.content .search{
  width: 630rpx;
  height: 60rpx;
  background:rgba(136,145,169,0.1);
  border-radius: 10rpx;
  box-sizing:border-box;
  padding:18rpx 32rpx;
}
.placeholderStyle{
  font-size: 24rpx;
  color:rgba(136,145,169,0.3);
  opacity:1;
  line-height: 60rpx;
}
.content li{
  margin-top:60rpx;
}
.info image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 29rpx;
  box-sizing: border-box;
  border: 1px solid red;
}
