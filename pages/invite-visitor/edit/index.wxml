<!--pages/invite-visitor/edit/index.wxml-->
<view class="page">
  <view class="page_hd">
    <view class="_flex step">
      <view class='cur'></view>
      <view></view>
    </view>
    <view class="_fontw600 head_title">编辑邀请函</view>
  </view>

  <view class="page_bd">
    <form bindsubmit="inviteSubmit">

      <view class="_fontw600 _font38 sec_title">基础信息</view>
      <view class="label _font24">访客姓名</view>
      <input class="weui-input _font36" name="visitor_name" id="i1" bindinput="checkForm" placeholder="请输入您邀请访客的姓名" placeholder-class="placeholder-input"></input>

      <view class="label _font24">预约到访时间</view>
      <input class="weui-input _font36" name="visitor_name" id="i1" bindinput="checkForm" placeholder="请选择您希望访客到访的时间" placeholder-class="placeholder-input"></input>

      <view class="_fontw600 _font38 sec_title">详细信息</view>
      <input class="weui-input _font36" name="visitor_name" id="i1" bindinput="checkForm" placeholder="请选择您希望访客到访的时间" placeholder-class="placeholder-input"></input>

    </form>
  </view>

  

  <view class="page_ft"></view>

</view>
