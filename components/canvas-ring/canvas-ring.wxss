.circle-bar-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  box-sizing: border-box;
  padding: 0 20%;
}

.circle-bar-wrap .font {
  max-height: 62rpx;
  font-size: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal;
}

.circle-bar-wrap .val {
  margin-top: -5rpx;
  line-height: 100rpx;
  font-size: 20rpx;
  height: 100rpx;
}