<block wx:if="{{direction==='row'}}" >
  <view class="uiView">
    <view catchtap='uploadImage' class="uploadModul">
      <!-- 点击上传 -->
      <block wx:if="{{model===1}}" >
        <image class="uploadBg" src='http://marvin-api-asset.oss-cn-hangzhou.aliyuncs.com/development/qr_code/shangyan/roomProve.png'></image>
        <text class="icon-tianjia iconfont icon-shenqingbeijujue-copy"></text>
      </block>
      <!-- 正在上传 -->
      <block  wx:if="{{model===2}}">
        <view catchtap="forbid">
        <view class="uploadBg _row _cen_center">
          <image style="width:{{ImgWid}}rpx;height:{{ImgHeig}}rpx" src='{{uploadImage}}'></image>
        </view>
        <view class="zhezhao"></view>
        <canvas-ring  class="canvas-ring" id="canvasRing" value="{{c_val}}"></canvas-ring>
        </view>
      </block>
      <!-- 上传失败 -->
      <block wx:if="{{model===3}}">
        <view class="uploadBg _row _cen_center">
          <image style="width:{{ImgWid}}rpx;height:{{ImgHeig}}rpx" src='{{uploadImage}}'></image>
        </view>
        <view class="zhezhao"></view>
        <text class="shuanxin iconfont icon-shuaxin"></text>
      </block>
      <!-- 上传成功 -->
      <block  wx:if="{{model===4}}">
        <image class="uploadBg" src='../../images/roomProve.png'></image>
      </block>

    </view>
    <block  wx:if="{{model===1}}">
      <view class="tipOne">{{tipTxt}}</view>
      <view class="tipTwo">请按照图例上传相关证件</view>
    </block>
    <block  wx:if="{{model===2}}">
      <view class="tipOne">正在上传…</view>
      <view class="tipTwo">请按照图例上传相关证件</view>
    </block>
    <block  wx:if="{{model===3}}">
      <view class="tipOne">上传失败，点击重新上传</view>
      <view class="tipTwo">请按照图例上传相关证件</view>
    </block>
    <block  wx:if="{{model===4}}">
      <view class="tipOne">上传成功</view>
      <view class="tipTwo">请按照图例上传相关证件</view>
    </block>
  </view>
</block>
