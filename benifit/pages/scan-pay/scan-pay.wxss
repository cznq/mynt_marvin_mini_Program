/* pages/scan-pay/scan-pay.wxss */

page {
  background: #f5f5f5;
}
.page{padding-bottom:30rpx;}
.card-wrapper {
  padding: 40rpx 60rpx 0;
}

.card-content {
  border: 1px solid #efefef;
  text-align: center;
  border-radius: 20rpx;
  background: #fff;
  height: 394rpx;
  overflow: hidden;
}

.vip-card-top {
  padding: 31rpx 45rpx 0 31rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.vip-card-top .name text {
  background: rgba(224, 181, 127, 1);
  color: #fff;
  font-size: 22rpx;
  font-weight: bold;
  text-align: center;
  margin-right: 15rpx;
  vertical-align: top;
  margin-top: 5rpx;
  line-height: 32rpx;
  width: 32rpx;
  display: inline-block;
}

.vip-card-top .name {
  font-size: 36rpx;
  margin-top: 14rpx;
  font-weight: bolder;
  line-height: 36rpx;
  color: #1a2a4b;
}

.vip-card-top .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  overflow: hidden;
  margin-top: 6rpx;
}

.vip-card-middle {
  text-align: left;
  padding: 52rpx 30rpx 48rpx 28rpx;
  color: #1a2a4b;
}

.vip-card-middle .company-name {
  font-size: 22rpx;
}

.vip-card-middle .company-address {
  margin-top: 20rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 300;
}

.vip-card-wrapper .card-content .bar {
  background: -webkit-linear-gradient(left, rgba(233, 195, 149, 1), rgba(217, 167, 107, 1));
  background: linear-gradient(left, rgba(233, 195, 149, 1), rgba(217, 167, 107, 1));
  color: #fff;
  font-size: 22rpx;
  height: 99rpx;
  line-height: 99rpx;
  position: relative;
}

.backfont {
  position: absolute;
  right: 16rpx;
  top: 0;
  height: 99rpx;
  font-size: 68rpx;
  color: #e2b988;
  font-weight: bolder;
}

.card-content .bar .id-num {
  background: #eacaa2;
  float: left;
  margin: 26rpx 0 0 32rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 16rpx;
}

.card-content .bar .expire-time {
  position: absolute;
  right: 45rpx;
  top: 0;
  float: right;
  font-weight: bold;
  z-index: 10;
}
