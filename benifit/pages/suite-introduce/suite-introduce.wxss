/* pages/suite-introduce/suite-introduce.wxss */

.page {
  width: 750rpx;
  background: rgba(255, 255, 255, 1);
}

.page__hd {
  padding: 20rpx 40rpx 0;
  height: 64rpx;
  background-color: #03428f;
}

.page__ft {
  width: 100%;
  height: 140rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -4rpx 10rpx 0rpx rgba(0, 0, 0, 0.04);
  position: fixed;
  bottom: 0;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.page .page__cont {
  padding-bottom: 140rpx;
}

.page .page__cont image {
  width: 100%;
  height: 100%;
  display: block;
  background-repeat: no-repeat;
}

.page__ft .info {
  
}

.page__ft .consult {
  box-sizing: border-box;
}

.page__ft .consult button {
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  width: 200rpx;
  height: 140rpx;
  line-height: 140rpx;
  margin-left: 20rpx;
}

.page__ft .info .info__top {
  font-size: 28rpx;
  color: #333;
}

.page__ft .info .info__ft {
  line-height: 1;
  color: rgba(51, 51, 51, 1);
}

.page__ft .info .info__ft .text__hd {
  font-size: 50rpx;
  font-weight: 400;
  color: #333;
}

.page__ft .info .info__ft .text__blur {
  font-size: 30rpx;
  font-weight: 500;
  color: #999;
}
.blue {
  color: rgba(0, 132, 255, 1);
  line-height: 1.2;
}
.icon-zixun {
  font-size: 36rpx;
}