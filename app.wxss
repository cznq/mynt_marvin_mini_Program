    text-align: center;
    line-height: 70rpx;
    font-size: 28rpx;
}

._family_name.dark {
    opacity: 0.5;
}

/* 输入框错误提示 */

.errorwrap {
    position: absolute;
    left: 60rpx;
    z-index: 99;
    width: 566rpx;
}

.errorwrap .arrow {
    border-width: 0 22rpx 22rpx;
    border-style: solid;
    border-color: transparent transparent rgba(252, 252, 252, 1);
    position: absolute;
    left: 28rpx;
    top: -18rpx;
}

.errorwrap view {
    border-radius: 10rpx;
}

.errorwrap text {
    padding: 30rpx 30rpx;
    border-radius: 10rpx;
    display: inline-block;
}

