                <view class="_num">43</view>
                <view class="_name">总资产数</view>
            </view>
            <view class="renting">
                <view class="_num">25</view>
                <view class="_name">在租资产</view>
            </view>
            <view class="expiring">
                <view class="_num">16</view>
