<import src="../../templates/noData/noData.wxml" />
<view class="block_fixed">
    <view class="top_menu">
        <scroll-view scroll-x style="white-space: nowrap;">
            <view wx:for="{{application}}" wx:for-index="idx" wx:key="key" class='menu_item' bindtap="{{item.bindtap}}" wx:if="{{item.isShow}}">
                <image class="m{{idx+1}} pic" src='{{item.pic}}'></image>
                {{item.name}}
            </view>
        </scroll-view>
    </view>
</view>
<block wx:if='{{hasAssets}}'>
