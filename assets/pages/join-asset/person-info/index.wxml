<!--pages/join-asset/person-info/index.wxml-->
<view class='_content _top_gradient2'>
    <view class='mainTitle'>{{personTitle}}</view>
    <form bindsubmit="confirmInfo">
        <view class="view-title title-top">
            <text>{{personName}}</text>
        </view>
        <input class="view-inp" name="personName" placeholder="请输入您的姓名"></input>
        <view class="view-line"></view>
        <view class="view-title">
            <text>{{personContact}}</text>
        </view>
        <input class="view-inp" name="personContact" placeholder="请输入手机号或座机号"></input>
        <view class="view-line"></view>
        <view class="view-title">
            <text>{{personID}}</text>
        </view>
        <input class="view-inp" name="personID" placeholder="请输入身份证号"></input>
        <view class="view-line"></view>
        <view class='input_block'>
            <button class="_button" form-type="submit" disabled="{{disabled}}">{{button_text}}</button>
        </view>
    </form>
</view>