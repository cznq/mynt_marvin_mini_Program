<!--pages/join-asset/person-info/index.wxml-->
<view class='_content _top_gradient2'>
    <view class='mainTitle'>{{personTitle}}</view>
    <form bindsubmit="confirmInfo">
        <view class="view-title title-top">
            <text>真实姓名</text>
        </view>
        <input class="view-inp" name="personName" placeholder="请输入您的姓名" value="{{personName}}"></input>
        <view class="view-line"></view>
        <view class="view-title">
            <text>联系方式</text>
        </view>
        <input class="view-inp" name="personContact" placeholder="请输入手机号或座机号" value="{{personContact}}"></input>
        <view class=" view-line">
        </view>
        <view class="view-title">
            <text>身份证</text>
        </view>
        <input class="view-inp" name="personID" placeholder="请输入身份证号" value="{{personID}}"></input>
        <view class=" view-line">
        </view>
        <view class='input_block'>
            <button class="_button" form-type="submit" disabled="{{disabled}}">{{button_text}}</button>
        </view>
    </form>
</view>