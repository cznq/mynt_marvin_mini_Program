<!--pages/join-asset/company-info/index.wxml-->
<view class='_content _top_gradient2'>
    <view class='mainTitle'>{{companyTitle}}</view>
    <form bindsubmit="nextStep">
        <view class="view-title title-top">
            <text>公司全称</text>
        </view>
        <input class="view-inp" name="name" placeholder="请输入公司全称" value="{{name}}"></input>
        <view class="view-line"></view>
        <view class='input_block _fixed footer covview {{isiphoneX ? "footer_x" : ""}}'>
            <button class="_button" form-type="submit" disabled="{{disabled}}">{{button_text}}</button>
        </view>
    </form>
</view>